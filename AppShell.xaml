<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectBlixen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectBlixen"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Vandaag"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_house" />

        <ShellContent
            Title="Aanwezig"
            ContentTemplate="{DataTemplate local:ReportPresencePage}"
            Icon="icon_calendar" />

        <ShellContent
            Title="Vrij vragen"
            ContentTemplate="{DataTemplate local:DayOffPage}"
            Icon="icon_form" />
    </TabBar>

</Shell>
